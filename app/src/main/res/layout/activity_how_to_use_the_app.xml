<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section with improved styling -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:padding="20dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp"
            android:layout_marginHorizontal="4dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_plant"
                android:background="@drawable/circle_green_background"
                android:padding="10dp"
                android:tint="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Capture the diseased leaf for analysis"
                android:textSize="18sp"
                android:textColor="@color/text_dark_green"
                android:textStyle="bold"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Enhanced Step Progress Section with 4 steps -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="24dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp"
            android:layout_marginHorizontal="4dp"
            android:gravity="center">

            <!-- Step 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_green_background"
                    android:elevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Upload"
                    android:textSize="11sp"
                    android:textColor="@color/primary_green"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Arrow 1 -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_arrow_right_green" />

            <!-- Step 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_green_background"
                    android:elevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Scan"
                    android:textSize="11sp"
                    android:textColor="@color/primary_green"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Arrow 2 -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_arrow_right_green" />

            <!-- Step 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_green_background"
                    android:elevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Check"
                    android:textSize="11sp"
                    android:textColor="@color/primary_green"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Arrow 3 -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_arrow_right_green" />

            <!-- Step 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_green_background"
                    android:elevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="PDF"
                    android:textSize="11sp"
                    android:textColor="@color/primary_green"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Enhanced Camera and Gallery Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="24dp">

            <!-- Camera Card -->
            <LinearLayout
                android:id="@+id/cardCamera"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:elevation="6dp"
                android:gravity="center"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_camera"
                    android:background="@drawable/circle_green_background"
                    android:padding="14dp"
                    android:elevation="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Take a picture of the affected leaves"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:lineSpacingExtra="1dp"
                    android:maxLines="2" />

            </LinearLayout>

            <!-- Gallery Card -->
            <LinearLayout
                android:id="@+id/cardGallery"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:clickable="true"
                android:elevation="6dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/circle_green_background"
                    android:elevation="2dp"
                    android:padding="14dp"
                    android:src="@drawable/ic_gallery"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:lineSpacingExtra="1dp"
                    android:maxLines="2"
                    android:text="Upload an image from your gallery"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Check Description and Diagnosis Card -->
        <LinearLayout
            android:id="@+id/cardCheckDiagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="20dp"
            android:layout_marginBottom="24dp"
            android:elevation="6dp"
            android:layout_marginHorizontal="4dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_description"
                android:background="@drawable/circle_green_background"
                android:padding="12dp"
                android:tint="@color/white"
                android:elevation="2dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check Description and Diagnosis"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark_green"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="View detailed analysis results and treatment recommendations"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="1dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Enhanced Download Section -->
        <LinearLayout
            android:id="@+id/cardDownloadPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginHorizontal="4dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_download"
                android:background="@drawable/circle_green_background"
                android:padding="12dp"
                android:tint="@color/white"
                android:elevation="2dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save PDF Report"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark_green"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Download complete diagnosis report as PDF"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="1dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>