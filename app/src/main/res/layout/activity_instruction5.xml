<?xml version="1.0" encoding="utf-8"?>
<!-- activity_onboarding.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:gravity="center">

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Main Illustration -->
        <ImageView
            android:id="@+id/iv_offline_illustration"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/notifications"
            android:scaleType="fitCenter"
            android:contentDescription="Far Away illustration" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allow Notifications"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_green"
            android:layout_marginBottom="16dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To receive water reminders, fertilizers reminders."
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:textAlignment="center"
            android:lineSpacingMultiplier="1.4"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

    <!-- Page Indicators -->
    <LinearLayout
        android:id="@+id/ll_indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <View
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/indicator_active" />

        <View
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/indicator_active" />

        <View
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/indicator_active" />

        <View
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/indicator_active" />

        <View
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/indicator_active" />

        <View
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:background="@drawable/indicator_active" />

    </LinearLayout>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:layout_marginBottom="50dp"
        android:gravity="center">

        <!-- Back Button -->
        <Button
            android:id="@+id/btn_skip"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:text="Skip"
            android:textColor="@color/primary_green"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_outline_green"
            style="?android:attr/borderlessButtonStyle" />

        <!-- Next Button -->
        <Button
            android:id="@+id/btn_allow"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Allow"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_filled_green" />

    </LinearLayout>

</LinearLayout>


